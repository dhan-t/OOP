<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edtxtEmail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#21252B"
    android:backgroundTint="#F1D302"
    android:gravity="center"
    app:layout_constraintEnd_toEndOf="parent"
    tools:layout_editor_absoluteY="401dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtvFILLER"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <View
            android:id="@+id/divider14"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/txtvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFFFC"
            android:text="Personal Background"
            android:textAlignment="center"
            android:textSize="45sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FCFEFB"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgvPicture"
                android:layout_width="214dp"
                android:layout_height="214dp"
                tools:srcCompat="@android:drawable/ic_menu_camera" />

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="215dp"
                android:layout_height="48dp"
                android:backgroundTint="#235789"
                android:text="Open Camera" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtxtFNamepbg"
                    android:layout_width="225dp"
                    android:layout_height="48dp"

                    android:hint="First name"
                    android:inputType="text"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtxtMNamepbg"
                    android:layout_width="75dp"
                    android:layout_height="48dp"
                    android:hint="M.I."
                    android:inputType="text"
                    android:textSize="16sp" />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCFEFB"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edtxtLNamepbg"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:hint="Last name"
                    android:inputType="text"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCFEFB"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtxtEmailpbg"
                    android:layout_width="300dp"
                    android:layout_height="48dp"

                    android:hint="Email"
                    android:inputType="text"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFFFC"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edtxtPhnNUm"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFFFC"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtvGender4t"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:text="Gender"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="italic" />

                <RadioGroup
                    android:id="@+id/rbtnGGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="50dp">

                    <RadioButton
                        android:id="@+id/rbtnFemale"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:text="Female" />

                    <RadioButton
                        android:id="@+id/rbtnMale"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:text="Male" />

                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#FDFFFC"
            android:gravity="center">

            <EditText
                android:id="@+id/etxtWeight"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="Weight (kg)"
                android:inputType="phone" />

            <EditText
                android:id="@+id/etxtHeight"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="Height (cm)"
                android:inputType="phone" />

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:background="#FDFFFC"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtvCivilStatus"
                android:layout_width="229dp"
                android:layout_height="40dp"
                android:background="#FDFFFC"
                android:text="Civil Status"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:background="#FDFFFC"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rbtnGCivilStatus"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="50dp"
                    android:background="#FDFFFC">

                    <RadioButton
                        android:id="@+id/rbtnMarried"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:text="Married"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rbtnSingle"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:text="Single"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rbtnWidowed"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:text="Widowed"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rbtnSeparated"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:text="Separated"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rbtnOthers"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:text="Others"
                        android:textSize="14sp" />

                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider21"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFFFC"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtvIDTitle"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:text="ID"
                android:textAlignment="center"
                android:textSize="38sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.036" />

            <EditText
                android:id="@+id/edtxtPagibig"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:ems="10"
                android:hint="Pagibig No."
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/edtxtPhilhealth"
                app:layout_constraintEnd_toEndOf="@+id/txtvIDTitle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtvIDTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtvIDTitle" />

            <EditText
                android:id="@+id/edtxtPhilhealth"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="1dp"
                android:ems="10"
                android:hint="Philhealth No."
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/edtxtGSIS"
                app:layout_constraintEnd_toEndOf="@+id/edtxtPagibig"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edtxtPagibig"
                app:layout_constraintTop_toBottomOf="@+id/edtxtPagibig" />

            <EditText
                android:id="@+id/edtxtGSIS"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="GSIS No."
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/edtxtTIN"
                app:layout_constraintEnd_toEndOf="@+id/edtxtPhilhealth"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edtxtPhilhealth"
                app:layout_constraintTop_toBottomOf="@+id/edtxtPhilhealth" />

            <EditText
                android:id="@+id/edtxtTIN"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="TIN No."
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/edtxtGSIS"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edtxtGSIS"
                app:layout_constraintTop_toBottomOf="@+id/edtxtGSIS" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider22"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="453dp"
            android:layout_height="wrap_content"
            android:background="#FDFFFC"
            android:backgroundTint="#FDFFFC"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtvEmergencyCN"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="50dp"
                android:text="Emergency Contact"
                android:textAlignment="center"
                android:textSize="38sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.319"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.041" />

            <EditText
                android:id="@+id/edtxtNameEC"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txtvEmergencyCN"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtvEmergencyCN"
                app:layout_constraintTop_toBottomOf="@+id/txtvEmergencyCN"
                app:layout_constraintVertical_bias="0.063" />

            <EditText
                android:id="@+id/edtxtContactEC"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Contact"
                android:inputType="phone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/edtxtNameEC"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edtxtNameEC"
                app:layout_constraintTop_toBottomOf="@+id/edtxtNameEC"
                app:layout_constraintVertical_bias="0.006" />

            <Spinner
                android:id="@+id/spnrRelationship"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/edtxtContactEC"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edtxtContactEC"
                app:layout_constraintTop_toBottomOf="@+id/edtxtContactEC"
                app:layout_constraintVertical_bias="0.173" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider23"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="#FDFFFC"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSubmitButton"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#235789"
                android:text="Submit"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
