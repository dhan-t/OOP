<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C1292E"
    android:backgroundTint="#C1292E"
    app:layout_constraintEnd_toEndOf="parent"
    tools:layout_editor_absoluteY="401dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDFFFC"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtvSpacer"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#C1292E"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/divider12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/txtvTitle2nd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Educational Attainment"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/chckbxElementary"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:text="Elementary"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/chckbxSecondary"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:text="Secondary"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/chckbxVocational"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:text="Vocational"
                        android:textSize="16sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/chckbxCollege"
                        android:layout_width="135dp"
                        android:layout_height="48dp"
                        android:text="Collge"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/chckbxGradStud"
                        android:layout_width="135dp"
                        android:layout_height="48dp"
                        android:text="Graduate Studies"
                        android:textSize="16sp" />

                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider13"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtvElementary"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:text="Elementary"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.085" />

                <EditText
                    android:id="@+id/etxtElementaryName"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="70dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="School Name"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/txtvElementary"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/txtvElementary"
                    app:layout_constraintTop_toBottomOf="@+id/txtvElementary"
                    app:layout_constraintVertical_bias="1.0" />

                <EditText
                    android:id="@+id/etxtElementaryCourse"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Basic Education"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/etxtElementaryName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/etxtElementaryName"
                    app:layout_constraintTop_toBottomOf="@+id/etxtElementaryName"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etxtSecondaryName"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="School Name"
                    android:inputType="text"
                    app:layout_constraintEnd_toEndOf="@+id/txtvSecondary"
                    app:layout_constraintStart_toStartOf="@+id/txtvSecondary"
                    app:layout_constraintTop_toBottomOf="@+id/txtvSecondary" />

                <TextView
                    android:id="@+id/txtvSecondary"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:text="Secondary"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.076" />

                <EditText
                    android:id="@+id/etxtSecondaryCourse"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Basic Education"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/etxtSecondaryName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/etxtSecondaryName"
                    app:layout_constraintTop_toBottomOf="@+id/etxtSecondaryName"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtvVocational"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:text="Vocational"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/etxtVocationalCourse"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Course"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/etxtVocationalName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/etxtVocationalName"
                    app:layout_constraintTop_toBottomOf="@+id/etxtVocationalName"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/etxtVocationalName"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="School Name"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/txtvVocational"
                    app:layout_constraintHorizontal_bias="0.511"
                    app:layout_constraintStart_toStartOf="@+id/txtvVocational"
                    app:layout_constraintTop_toBottomOf="@+id/txtvVocational"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etxtCollegeName"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="School Name"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/txtvCollege"
                    app:layout_constraintStart_toStartOf="@+id/txtvCollege"
                    app:layout_constraintTop_toBottomOf="@+id/txtvCollege"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/etxtCollegeCourse"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Degree"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/etxtCollegeName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/etxtCollegeName"
                    app:layout_constraintTop_toBottomOf="@+id/etxtCollegeName"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/txtvCollege"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:text="College"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.178" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etxtGradClassName"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="School Name"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/txtvGradClass"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/txtvGradClass"
                    app:layout_constraintTop_toBottomOf="@+id/txtvGradClass"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/etxtGradClassCourse"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Degree"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/etxtGradClassName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/etxtGradClassName"
                    app:layout_constraintTop_toBottomOf="@+id/etxtGradClassName"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/txtvGradClass"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:text="Graduate Study"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit2nd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#235789"
            android:text="Submit" />

        <Button
            android:id="@+id/btnReturn2nd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F1D302"
            android:text="Return"
            android:textColor="#161925"
            android:textColorHighlight="#FFFFFF"
            android:textColorLink="#FFFFFF" />


    </LinearLayout>
</ScrollView>
